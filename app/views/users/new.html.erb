<h1>Sign up</h1>

<%= form_for @user do |f| %>
  <%= render "shared/error_messages", :object => f.object %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "field" %>
  </div>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, :class => "field" %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, :class => "field" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => "field" %>
  </div>
  <div class="actions"><%= f.submit "Sign up", :class => "submit" %></div>
<% end %>
