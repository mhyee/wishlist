<h1>Log in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="form">
    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username, :class => "field" %>
      <div class="clear"></div>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, :class => "field" %>
      <div class="clear"></div>
    </div>
    <div class="actions"><%= f.submit "Login", :class => "submit" %></div>
  </div>
<% end %>
