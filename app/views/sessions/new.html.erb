<h1>Log in</h1>

<%= form_tag :action => "create" do %>
 <div class="field">
  <%= label_tag :username, "Username" %>
  <%= text_field_tag :username %>
 </div>
 <div class="field">
  <%= label_tag :password, "Password" %>
  <%= password_field_tag :password %>
 </div>
 <div class="actions"><%= submit_tag "Login" %></div>
<% end %>
